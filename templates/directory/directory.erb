
  <Directory <%= @directory %>>
    AllowOverride <%= @allowoverride %>
    Options <%= @options.join(' ') %>
    <%- if @limit_http_methods.any? -%>
    # Limit HTTP methods to standard methods. Note: Does not limit TRACE
    <LimitExcept <%= @limit_http_methods.join(' ') %>>
      <%- if scope.function_versioncmp([scope.lookupvar('apache::version'), '2.4']) >= 0 -%>
      Require all denied
      <%- else -%>
      Deny from all
      Allow from none
      <%- end -%>
    </LimitExcept>
    <%- end -%>
    <%- if @ssl_options.any? -%>
    SSLOptions <%= @ssl_options.join(' ') %>
    <%- end -%>
  <%- if scope.function_versioncmp([scope.lookupvar('apache::version'), '2.4']) >= 0 -%>
    <%- if @allowedip -%>
    Require all denied
    Require ip <%= @allowedip.join(' ') %>
    <%- elsif @denyip -%>
    <RequireAll>
      Require all granted
      Require not ip <%= @denyip.join(' ') %>
    </RequireAll>
    <%- else -%>
    Require all granted
    <%- end -%>
  <%- else -%>
    <%- if @allowedip -%>
    Order Deny,Allow
    Deny from all
    Allow from <%= @allowedip.join(' ') %>
    <%- else -%>
    Order Allow,Deny
    Allow from all
      <%- if @denyip -%>
    Deny from <%= @denyip.join(' ') %>
      <%- end -%>
    <%- end -%>
  <%- end -%>
  </Directory>
