
  <Location <%= @location %>>
    <%- if defined?(@allowoverride) -%>
    AllowOverride <%= @allowoverride %>
    <%- end -%>
    <%- if @options.any? -%>
    Options <%= @options.join(' ') %>
    <%- end -%>
    <%- if defined?(@ssl_require) -%>
    SSLRequire <%= @ssl_require %>
    <%- end -%>
  <%- if scope.function_versioncmp([scope.lookupvar('apache::version'), '2.4']) >= 0 -%>
    <%- if @allowedip -%>
    Require all denied
    Require ip <%= @allowedip.join(' ') %>
    <%- elsif @denyip -%>
    <RequireAll>
      Require all granted
      Require not ip <%= @denyip.join(' ') %>
    </RequireAll>
    <%- else -%>
    Require all granted
    <%- end -%>
  <%- else -%>
    <%- if @allowedip -%>
    Order Deny,Allow
    Deny from all
    Allow from <%= @allowedip.join(' ') %>
    <%- else -%>
    Order Allow,Deny
    Allow from all
      <%- if @denyip -%>
    Deny from <%= @denyip.join(' ') %>
      <%- end -%>
    <%- end -%>
  <%- end -%>
  </Location>
